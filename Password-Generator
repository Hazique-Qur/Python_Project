import random
import string

print("'Hey What's up?'\n'Give The Answer of These some questions'")

lenght = int(input("Enter the length of the password: "))
if lenght < 1:
    print("Length must be at least 1.")
    exit()
elif lenght > 100:
    print("Length must not exceed 100.")
    exit()
upercase = input("Do you want uppercase letters? (yes/no): ").strip().lower()
if upercase == 'yes':
    upercase = True
else:
    upercase = False

digits = input("Do you want digits? (yes/no): ").strip().lower()
if digits == 'yes':
    digits = True
else:
    digits = False

symbols = input("Do you want symbols? (yes/no): ").strip().lower()
if symbols == 'yes':
    symbols = True
else:
    symbols = False

a = string.ascii_lowercase
if upercase:
    a += string.ascii_uppercase
if digits:
    a += string.digits
if symbols:
    a += string.punctuation

if not a:
    print("No character types selected. Cannot generate password.")
    exit()

password = ''.join(random.choice(a) for _ in range(lenght))
print(f"Your password is: {password}")

